{
  "id": "museum-next",
  "name": "Museum/Archive (Next.js)",
  "description": "A comprehensive museum, archive, or gallery site with artifacts, people, places, and collections. Features complex relationships, timeline views, and tag-based revalidation.",
  "category": "museum",
  "frontend": "next",
  "version": "1.0.0",
  "author": "Payload CMS + Jamstack Platform",
  "collections": [
    "users",
    "media",
    "pages",
    "posts",
    "categories",
    "artifacts",
    "people",
    "places",
    "museum-collections",
    "content-types",
    "custom-items"
  ],
  "globals": [
    "header",
    "footer",
    "settings"
  ],
  "templates": [
    "home",
    "landing",
    "detail",
    "list",
    "article",
    "timeline",
    "archive"
  ],
  "blocks": [
    "hero",
    "content",
    "media",
    "cta",
    "archive",
    "gallery",
    "grid",
    "timeline"
  ],
  "hasSeedData": true,
  "hasSampleMedia": true,
  "packs": [
    "seo",
    "search",
    "redirects"
  ],
  "payloadVersion": "^3.0.0",
  "requiredEnvVars": [
    "DATABASE_URL",
    "PAYLOAD_SECRET",
    "REVALIDATION_SECRET"
  ],
  "optionalEnvVars": [
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASS",
    "S3_BUCKET",
    "S3_REGION",
    "S3_ACCESS_KEY_ID",
    "S3_SECRET_ACCESS_KEY"
  ]
}
