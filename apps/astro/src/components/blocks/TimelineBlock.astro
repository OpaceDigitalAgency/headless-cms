---
/**
 * Timeline Block Component
 * 
 * Chronological timeline display for events, history, or milestones.
 */

interface Props {
  heading?: string;
  events?: Array<{
    date: string;
    title: string;
    description?: string;
    image?: {
      url: string;
      alt?: string;
    };
  }>;
  layout?: 'vertical' | 'horizontal' | 'alternating';
}

const { heading, events = [], layout = 'vertical' } = Astro.props;

if (events.length === 0) return null;
---

<section class="py-12">
  <div class="container">
    {heading && (
      <h2 class="text-2xl font-bold mb-8 text-center">{heading}</h2>
    )}
    
    {/* Vertical Timeline */}
    {layout === 'vertical' && (
      <div class="relative max-w-3xl mx-auto">
        {/* Timeline line */}
        <div class="absolute left-4 md:left-8 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700" />
        
        <div class="space-y-8">
          {events.map((event, index) => (
            <div class="relative pl-12 md:pl-20">
              {/* Timeline dot */}
              <div class="absolute left-2.5 md:left-6.5 w-3 h-3 bg-blue-600 rounded-full border-4 border-white dark:border-gray-900" />
              
              {/* Date */}
              <div class="text-sm font-semibold text-blue-600 dark:text-blue-400 mb-1">
                {event.date}
              </div>
              
              {/* Content */}
              <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                {event.image?.url && (
                  <img 
                    src={event.image.url} 
                    alt={event.image.alt || event.title} 
                    class="w-full h-48 object-cover rounded-lg mb-4"
                    loading="lazy"
                  />
                )}
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                  {event.title}
                </h3>
                {event.description && (
                  <p class="mt-2 text-gray-600 dark:text-gray-300">
                    {event.description}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    {/* Horizontal Timeline */}
    {layout === 'horizontal' && (
      <div class="relative overflow-x-auto pb-8">
        {/* Timeline line */}
        <div class="absolute left-0 right-0 top-6 h-0.5 bg-gray-200 dark:bg-gray-700" />
        
        <div class="flex gap-8 min-w-max px-4">
          {events.map((event) => (
            <div class="relative w-64 pt-12">
              {/* Timeline dot */}
              <div class="absolute left-1/2 top-4 -translate-x-1/2 w-4 h-4 bg-blue-600 rounded-full border-4 border-white dark:border-gray-900" />
              
              {/* Content */}
              <div class="text-center">
                <div class="text-sm font-semibold text-blue-600 dark:text-blue-400 mb-2">
                  {event.date}
                </div>
                {event.image?.url && (
                  <img 
                    src={event.image.url} 
                    alt={event.image.alt || event.title} 
                    class="w-full h-32 object-cover rounded-lg mb-3"
                    loading="lazy"
                  />
                )}
                <h3 class="font-semibold text-gray-900 dark:text-white">
                  {event.title}
                </h3>
                {event.description && (
                  <p class="mt-1 text-sm text-gray-600 dark:text-gray-300 line-clamp-3">
                    {event.description}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    {/* Alternating Timeline */}
    {layout === 'alternating' && (
      <div class="relative max-w-4xl mx-auto">
        {/* Timeline line */}
        <div class="absolute left-1/2 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700 -translate-x-1/2" />
        
        <div class="space-y-12">
          {events.map((event, index) => (
            <div class={`relative flex items-center ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'}`}>
              {/* Content */}
              <div class="w-5/12">
                <div class={`bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 ${index % 2 === 0 ? 'text-right' : 'text-left'}`}>
                  <div class="text-sm font-semibold text-blue-600 dark:text-blue-400 mb-1">
                    {event.date}
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {event.title}
                  </h3>
                  {event.description && (
                    <p class="mt-2 text-gray-600 dark:text-gray-300">
                      {event.description}
                    </p>
                  )}
                </div>
              </div>
              
              {/* Timeline dot */}
              <div class="w-2/12 flex justify-center">
                <div class="w-4 h-4 bg-blue-600 rounded-full border-4 border-white dark:border-gray-900 z-10" />
              </div>
              
              {/* Spacer / Image */}
              <div class="w-5/12">
                {event.image?.url && (
                  <img 
                    src={event.image.url} 
                    alt={event.image.alt || event.title} 
                    class="w-full h-40 object-cover rounded-lg"
                    loading="lazy"
                  />
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
</section>
