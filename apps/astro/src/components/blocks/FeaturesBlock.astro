---
/**
 * Features Block Component
 * 
 * Display a list of features or benefits.
 */

interface Props {
  heading?: string;
  subheading?: string;
  layout?: 'grid' | 'list';
  items?: Array<{
    title: string;
    description?: string;
    icon?: string;
  }>;
}

const { heading, subheading, items = [], layout = 'grid' } = Astro.props;
---

<section class="py-12">
  <div class="container">
    {(heading || subheading) && (
      <div class="mb-12">
        {heading && (
          <h2 class="text-3xl font-bold">
            {heading}
          </h2>
        )}
        {subheading && (
          <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">
            {subheading}
          </p>
        )}
      </div>
    )}

    <div class={layout === 'list' ? 'space-y-6' : 'grid gap-8 md:grid-cols-2 lg:grid-cols-4'}>
      {items.map((item) => (
        <div class="rounded-lg border border-gray-200 bg-white p-6 dark:border-gray-700 dark:bg-gray-800">
          {item.icon && (
            <div class="mb-4 text-3xl">
              {item.icon}
            </div>
          )}

          <h3 class="mb-2 font-semibold text-gray-900 dark:text-white">
            {item.title}
          </h3>

          {item.description && (
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {item.description}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

