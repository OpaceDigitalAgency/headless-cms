---
/**
 * Team Block Component
 * 
 * Display team members with their roles and bios.
 */

interface Props {
  heading?: string;
  members?: Array<{
    name: string;
    role: string;
    bio?: string;
    image?: {
      url: string;
      alt?: string;
    };
  }>;
}

const { heading, members = [] } = Astro.props;
---

<section class="py-12 bg-gray-50 dark:bg-gray-800/50">
  <div class="container">
    {heading && (
      <h2 class="text-3xl font-bold mb-12 text-center">
        {heading}
      </h2>
    )}
    
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      {members.map((member) => (
        <div class="rounded-lg bg-white p-6 text-center dark:bg-gray-800">
          {member.image?.url && (
            <img 
              src={member.image.url} 
              alt={member.image.alt || member.name}
              class="mb-4 h-32 w-32 rounded-full object-cover mx-auto"
            />
          )}
          
          <h3 class="font-semibold text-gray-900 dark:text-white">
            {member.name}
          </h3>
          
          <p class="text-sm text-blue-600 dark:text-blue-400">
            {member.role}
          </p>
          
          {member.bio && (
            <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">
              {member.bio}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

