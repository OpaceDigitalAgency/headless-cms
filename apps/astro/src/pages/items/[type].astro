---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getContentTypes, getContentTypeBySlugOrArchiveSlug, getCustomItemsByType } from '../../lib/payload';

export async function getStaticPaths() {
  const types = await getContentTypes();
  return types.docs
    .filter((type: any) => type.hasArchive !== false)
    .map((type: any) => ({
      params: { type: type.archiveSlug ? type.archiveSlug.replace(/^\\/?items\\//, '') : type.slug },
      props: { contentType: type },
    }));
}

const { contentType } = Astro.props;
const typeSlug = contentType?.slug || Astro.params.type;

const resolvedType = contentType || await getContentTypeBySlugOrArchiveSlug(typeSlug);
if (!resolvedType || resolvedType.hasArchive === false) {
  return Astro.redirect('/404');
}

const items = await getCustomItemsByType(resolvedType.id, { limit: 100 });
---

<BaseLayout title={resolvedType.pluralLabel || resolvedType.name} description={resolvedType.description || ''}>
  <section class="py-16">
    <div class="container">
      <header class="mb-10 text-center">
        <h1 class="text-4xl font-bold">{resolvedType.pluralLabel || resolvedType.name}</h1>
        {resolvedType.description && (
          <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">{resolvedType.description}</p>
        )}
      </header>

      {items.docs.length === 0 ? (
        <p class="text-center text-gray-500">No items found.</p>
      ) : (
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {items.docs.map((item: any) => (
            <a href={`/items/${resolvedType.archiveSlug ? resolvedType.archiveSlug.replace(/^\\/?items\\//, '') : resolvedType.slug}/${item.slug}`} class="card block overflow-hidden hover:shadow-lg transition-shadow">
              {item.featuredImage?.url && (
                <img src={item.featuredImage.url} alt={item.featuredImage.alt || item.title} class="w-full h-48 object-cover" />
              )}
              <div class="p-5">
                <h2 class="text-xl font-semibold">{item.title}</h2>
                {item.excerpt && <p class="mt-2 text-gray-600 dark:text-gray-300 line-clamp-2">{item.excerpt}</p>}
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
