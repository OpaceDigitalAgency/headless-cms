---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getMuseumCollections } from '@/lib/payload';

const collections = await getMuseumCollections({ limit: 500 });
---

<BaseLayout title="Collections" description="Browse our museum collections">
  <div class="container py-16">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight">Collections</h1>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        Browse our curated museum collections
      </p>
    </header>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {collections.docs.map((collection: any) => (
        <a href={`/collections/${collection.slug}`} class="card group overflow-hidden">
          {collection.featuredImage?.url && (
            <div class="relative h-56 overflow-hidden">
              <img 
                src={collection.featuredImage.url} 
                alt={collection.featuredImage.alt || collection.title}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent" />
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <h2 class="text-xl font-bold text-white">{collection.title}</h2>
              </div>
            </div>
          )}
          {!collection.featuredImage?.url && (
            <div class="bg-gray-100 dark:bg-gray-800 p-6">
              <h2 class="text-xl font-bold text-gray-900 dark:text-white">{collection.title}</h2>
            </div>
          )}
          <div class="p-4">
            {collection.shortDescription && (
              <p class="text-gray-600 dark:text-gray-300 line-clamp-2">{collection.shortDescription}</p>
            )}
          </div>
        </a>
      ))}
    </div>

    {collections.docs.length === 0 && (
      <div class="text-center text-gray-500 dark:text-gray-400">
        <p>No collections found.</p>
      </div>
    )}
  </div>
</BaseLayout>
