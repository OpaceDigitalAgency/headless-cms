---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getPlaces } from '@/lib/payload';

const places = await getPlaces({ limit: 500 });
---

<BaseLayout title="Places" description="Geographic locations connected to our collection">
  <div class="container py-16">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-bold tracking-tight">Places</h1>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        Geographic locations connected to our collection
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {places.docs.map((place: any) => (
        <a href={`/places/${place.slug}`} class="card overflow-hidden group">
          {place.featuredImage?.url && (
            <div class="relative h-48 overflow-hidden">
              <img 
                src={place.featuredImage.url} 
                alt={place.featuredImage.alt || place.name}
                class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              />
            </div>
          )}
          <div class="p-4">
            <h2 class="font-semibold text-gray-900 dark:text-white">{place.name}</h2>
            {place.country && (
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">{place.country}</p>
            )}
            {place.placeType && (
              <span class="mt-2 inline-block rounded bg-gray-100 dark:bg-gray-700 px-2 py-0.5 text-xs capitalize text-gray-600 dark:text-gray-300">
                {place.placeType}
              </span>
            )}
          </div>
        </a>
      ))}
    </div>

    {places.docs.length === 0 && (
      <div class="text-center text-gray-500 dark:text-gray-400">
        <p>No places found.</p>
      </div>
    )}
  </div>
</BaseLayout>
