# ===========================================
# Astro Frontend Environment Variables
# ===========================================
# Copy this file to .env in the same directory
# DO NOT commit .env to version control

# -------------------------------------------
# Database Configuration (REQUIRED)
# -------------------------------------------
# PostgreSQL connection string - must match the CMS database
# For Railway: Use the same DATABASE_URL as the CMS
# For local Docker: Use the default below
DATABASE_URL=postgresql://payload:payload_secret@localhost:5432/payload

# -------------------------------------------
# Payload Configuration (REQUIRED)
# -------------------------------------------
# Secret key for JWT signing - must match the CMS secret
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-change-in-production

# Public URL of the CMS server
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# -------------------------------------------
# Site Configuration
# -------------------------------------------
# Public URL of this Astro site
PUBLIC_SITE_URL=http://localhost:4321

# CMS API URL for fetching content
PUBLIC_CMS_URL=http://localhost:3000

