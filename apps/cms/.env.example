# ===========================================
# Payload CMS Environment Variables
# ===========================================
# Copy this file to .env in the same directory
# DO NOT commit .env to version control

# -------------------------------------------
# Database Configuration (REQUIRED)
# -------------------------------------------
# PostgreSQL connection string
# For Railway: Use the DATABASE_URL provided by Railway Postgres
# For local Docker: Use the default below
DATABASE_URL=postgresql://payload:payload_secret@localhost:5432/payload

# -------------------------------------------
# Payload CMS Configuration (REQUIRED)
# -------------------------------------------
# Secret key for JWT signing and encryption
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET=your-super-secret-key-change-in-production

# Public URL of the CMS server (used for generating links)
# Local: http://localhost:3000
# Production: https://your-cms-domain.railway.app
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# -------------------------------------------
# Frontend Configuration (REQUIRED)
# -------------------------------------------
# Public URL of the frontend site
# Local: http://localhost:3001 (Next.js) or http://localhost:4321 (Astro)
# Production: https://your-site-domain.railway.app
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Internal CMS URL for server-side requests
# Local: http://localhost:3000
# Production: Use internal Railway URL or public URL
CMS_URL=http://localhost:3000

# Secret for on-demand revalidation (ISR)
# Generate with: openssl rand -base64 32
REVALIDATION_SECRET=your-revalidation-secret-change-in-production

# -------------------------------------------
# Live Preview Configuration
# -------------------------------------------
# Secret for secure preview token generation
PREVIEW_SECRET=your-preview-secret-change-in-production

# -------------------------------------------
# Node Environment
# -------------------------------------------
NODE_ENV=development

# -------------------------------------------
# Email Configuration (Optional)
# -------------------------------------------
# SMTP server settings for sending emails
# (password reset, form submissions, notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# EMAIL_FROM_NAME=Payload CMS
# EMAIL_FROM_ADDRESS=noreply@example.com

# -------------------------------------------
# S3-Compatible Storage (Optional)
# -------------------------------------------
# For storing media files in cloud storage
# Works with AWS S3, Cloudflare R2, MinIO, etc.
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://your-s3-endpoint.com
# S3_CDN_URL=https://cdn.example.com

# -------------------------------------------
# Payload Telemetry (Optional)
# -------------------------------------------
# Set to false to disable anonymous usage telemetry
# PAYLOAD_TELEMETRY=true

# -------------------------------------------
# Debug Mode (Development Only)
# -------------------------------------------
# Enable verbose logging
# DEBUG=payload:*

