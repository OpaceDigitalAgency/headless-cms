{
  "name": "@repo/cms",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev -p 3000",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "generate:types": "payload generate:types",
    "generate:graphql": "payload generate:graphQLSchema",
    "migrate": "payload migrate",
    "migrate:create": "payload migrate:create",
    "migrate:down": "payload migrate:down",
    "migrate:status": "payload migrate:status",
    "seed": "tsx src/seed/index.ts",
    "clean": "rm -rf .next .payload node_modules"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "^3.14.0",
    "@payloadcms/email-nodemailer": "^3.14.0",
    "@payloadcms/graphql": "^3.14.0",
    "@payloadcms/next": "^3.14.0",
    "@payloadcms/plugin-cloud-storage": "^3.14.0",
    "@payloadcms/plugin-form-builder": "^3.14.0",
    "@payloadcms/plugin-nested-docs": "^3.14.0",
    "@payloadcms/plugin-redirects": "^3.14.0",
    "@payloadcms/plugin-search": "^3.14.0",
    "@payloadcms/plugin-seo": "^3.14.0",
    "@payloadcms/richtext-lexical": "^3.14.0",
    "@payloadcms/storage-s3": "^3.14.0",
    "@payloadcms/ui": "^3.14.0",
    "@repo/shared": "workspace:*",
    "cross-env": "^7.0.3",
    "graphql": "^16.9.0",
    "next": "^15.1.0",
    "nodemailer": "^6.9.16",
    "payload": "^3.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
