{
  "name": "@repo/cms",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation DRIZZLE_PUSH_ACCEPT_ALL=1 next dev -p ${CMS_PORT:-3000}",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start -p ${CMS_PORT:-3000}",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "generate:types": "payload generate:types",
    "generate:graphql": "payload generate:graphQLSchema",
    "migrate": "cross-env NODE_PATH=./node_modules node --import tsx ./node_modules/payload/bin.js migrate",
    "migrate:create": "cross-env NODE_PATH=./node_modules node --import tsx ./node_modules/payload/bin.js migrate:create",
    "migrate:down": "cross-env NODE_PATH=./node_modules node --import tsx ./node_modules/payload/bin.js migrate:down",
    "migrate:status": "cross-env NODE_PATH=./node_modules node --import tsx ./node_modules/payload/bin.js migrate:status",
    "seed": "tsx src/seed/index.ts",
    "test": "node --import tsx --test \"tests/**/*.test.ts\"",
    "clean": "rm -rf .next .payload node_modules"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "^3.71.1",
    "@payloadcms/email-nodemailer": "^3.71.1",
    "@payloadcms/graphql": "^3.71.1",
    "@payloadcms/live-preview-react": "^3.71.1",
    "@payloadcms/next": "^3.71.1",
    "@payloadcms/plugin-cloud-storage": "^3.71.1",
    "@payloadcms/plugin-form-builder": "^3.71.1",
    "@payloadcms/plugin-nested-docs": "^3.71.1",
    "@payloadcms/plugin-redirects": "^3.71.1",
    "@payloadcms/plugin-search": "^3.71.1",
    "@payloadcms/plugin-seo": "^3.71.1",
    "@payloadcms/richtext-lexical": "^3.71.1",
    "@payloadcms/storage-s3": "^3.71.1",
    "@payloadcms/ui": "^3.71.1",
    "@repo/shared": "workspace:*",
    "@repo/templates": "workspace:^",
    "@repo/ui": "workspace:*",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.15",
    "cross-env": "^7.0.3",
    "graphql": "^16.9.0",
    "monaco-editor": "^0.55.1",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "nodemailer": "^6.9.16",
    "payload": "^3.71.1",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "server-only": "^0.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
